<%- include('partials/header', { title: 'البحث عن أطباء' }) %>

    <main class="container">
        <section class="search-section">
            <h2>ابحث عن عيادات</h2>
            <form method="GET" action="/search-clinics">
                <div class="form-group">
                    <label for="doctor-name">اسم العيادة:</label>
                    <input type="text" name="query" placeholder="ابحث بالاسم أو الموقع" >
                </div>
                <button type="submit" class="btn">بحث</button>
            </form>
        </section>

        <section class="doctors-list" id="doctors-container">
                <% if (clinics.length > 0) { %>
                <% clinics.forEach(clinic => { %>
                    <div class="doctor-card">
                        <img src="<%=  %>" alt="صورة العيادة">
                        <h3><%= clinic.name %></h3>
                        <p class="specialty">في: <%= clinic.location %></p>
                        <a href="/clinic/<%= clinic.id %>" class="btn">عرض التفاصيل</a>
                    </div>
                <% }) %>
                <% } else if (query) { %>
                    <p class="no-doctors">تاكد من اسم العيادة فضلا</p>
                <% } %>
        </section>
    </main>

<%- include('partials/footer') %>