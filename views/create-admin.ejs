<%- include('partials/header', { title: 'إنشاء حساب مسؤول' }) %>

    <main class="container">
        <h1>إنشاء حساب مسؤول جديد</h1>
        <div class="admin-actions">
            <a href="/dashboard" class="btn">العودة للوحة التحكم</a>
        </div>
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        
        <form action="/dashboard/add-admin" method="POST">
            <div class="form-group">
                <label for="username">اسم المستخدم:</label>
                <input type="text" id="username" name="username" required>
            </div>
            
            <div class="form-group">
                <label for="password">كلمة المرور:</label>
                <input type="password" id="password" name="password" required minlength="6">
            </div>
            
            <div class="form-group">
                <label for="name">الاسم الكامل:</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="email">البريد الإلكتروني:</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <button type="submit" class="btn">إنشاء الحساب</button>
            <a href="/dashboard" class="btn cancel">إلغاء</a>
        </form>
    </main>

<%- include('partials/footer') %>