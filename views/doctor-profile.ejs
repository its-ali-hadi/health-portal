<%- include('partials/header', { title: 'ملف الطبيب' }) %>

    <main class="container" style="margin-top: 50px;">
        <section class="doctor-profile">
            <div class="profile-header">
                <img src="<%= doctor.image %>" alt="صورة الطبيب">
                <div class="profile-info">
                    <h2><%= doctor.name %></h2>
                    <p class="specialty"><%= doctor.specialty %></p>
                    <p class="hospital"><%= doctor.clinicName %></p>
                    <div class="rating">
                        <span class="stars">
                            <% for (let i = 1; i <= 5; i++) { %>
                                <% if (i <= Math.floor(doctor.rating)) { %>
                                    ★
                                <% } else if (i === Math.ceil(doctor.rating) && doctor.rating % 1 > 0.3) { %>
                                    ☆
                                <% } else { %>
                                    ★
                                <% } %>
                            <% } %>
                        </span>
                        <span class="rating-text"><%= doctor.rating %> (<%= doctor.reviews %> تقييم)</span>
                    </div>
                </div>
            </div>

            <div class="profile-details">
                <% if (doctor.education) { %>
                    <h3>معلومات عن الطبيب</h3>
                    <p>طبيب استشاري في <%= doctor.specialty %>، خبرة أكثر من 15 سنة في مجال تخصصه.</p>
                    
                    <h3>التعليم والخبرة</h3>
                    <ul>
                        <% doctor.education.forEach(edu => { %>
                            <li><%= edu %></li>
                        <% }); %>
                    </ul>
                <% } %>
                
                <!-- بعد معلومات الطبيب الأساسية -->
<div class="schedule-container">
  <h3>مواعيد العمل</h3>
  <table class="schedule-table">
    <thead>
      <tr>
        <th>اليوم</th>
        <th>الفترة الصباحية</th>
        <th>الفترة المسائية</th>
      </tr>
    </thead>
    <tbody>
      <% Object.entries(doctor.schedule).forEach(([day, times]) => { %>
        <tr>
          <td>
            <% if (day === 'الأحد') { %> الأحد <% } %>
            <% if (day === 'الإثنين') { %> الإثنين <% } %>
            <% if (day === 'الثلاثاء') { %> الثلاثاء <% } %>
            <% if (day === 'الأربعاء') { %> الأربعاء <% } %>
            <% if (day === 'الخميس') { %> الخميس <% } %>
            <% if (day === 'الجمعة') { %> الجمعة <% } %>
            <% if (day === 'السبت') { %> السبت <% } %>
          </td>
          <td><%= times.morning %></td>
          <td><%= times.evening %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>




<h3>احجز موعد</h3>
<form class="booking-form" method="POST" action="/book-appointment/<%- doctor.id %>">

  <label for="date">التاريخ:</label>
  <input type="date" id="date" name="date" required>

  <label for="time">الوقت:</label>
  <input type="time" name="time" id="time" required><br>

  <button type="submit" class="btn book-btn">تأكيد الحجز</button>
</form>


              
            </div>
        </section>
    </main>


    <style>
      .booking-form {
  background-color: white;
  color: #fff;
  padding: 1.5rem;
  border-radius: 8px;
  max-width: 400px;
  margin: auto;
  box-shadow: 0 2px 8px rgba(0,0,0,0.4);
}

.booking-form h2 {
  margin-bottom: 1rem;
  text-align: center;
  color: #00c2ff;
}

.booking-form label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: bold;
}

.booking-form input,
.booking-form select {
  width: 100%;
  padding: 0.75rem;
  margin-bottom: 1.2rem;
  border-radius: 6px;
  border: none;
  background-color: #f1f1f1;
  color: #fff;
}

.booking-form button {
  width: 100%;
  padding: 0.75rem;
  background-color: #00c2ff;
  color: white;
  border: none;
  border-radius: 6px;
  font-weight: bold;
  cursor: pointer;
}

.booking-form button:hover {
  background-color: #0090cc;
}
    </style>
<%- include('partials/footer') %>